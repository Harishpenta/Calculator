<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calculator"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Calculator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3360377725254476~6946733057" />
        
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Widgets -->
        <receiver
            android:name=".ui.widgets.CalculatorWidgetReceiver"
            android:exported="true"
            android:icon="@drawable/ic_calculator"
            android:label="Calculator">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_calculator" />
        </receiver>

        <receiver
            android:name=".ui.widgets.BmiWidgetReceiver"
            android:exported="true"
            android:icon="@drawable/ic_bmi"
            android:label="BMI Calculator">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_bmi" />
        </receiver>

        <receiver
            android:name=".ui.widgets.AgeWidgetReceiver"
            android:exported="true"
            android:icon="@drawable/ic_age"
            android:label="Age Calculator">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_age" />
        </receiver>

        <receiver
            android:name=".ui.widgets.EmiWidgetReceiver"
            android:exported="true"
            android:icon="@drawable/ic_loan"
            android:label="EMI Calculator">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_emi" />
        </receiver>

        <receiver
            android:name=".ui.widgets.SipWidgetReceiver"
            android:exported="true"
            android:icon="@drawable/ic_investment"
            android:label="SIP Calculator">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_sip" />
        </receiver>

        <receiver
            android:name=".ui.widgets.CurrencyWidgetReceiver"
            android:exported="true"
            android:icon="@drawable/ic_currency"
            android:label="Currency Converter">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_currency" />
        </receiver>

        <receiver
            android:name=".ui.widgets.UnitConverterWidgetReceiver"
            android:exported="true"
            android:icon="@drawable/ic_unit_converter"
            android:label="Unit Converter">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_unit" />
        </receiver>

        <receiver
            android:name=".ui.widgets.GeometryWidgetReceiver"
            android:exported="true"
            android:icon="@drawable/ic_geometry"
            android:label="Geometry">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_geometry" />
        </receiver>
    </application>

</manifest>
